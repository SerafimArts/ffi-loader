{
    "name": "serafim/ffi-loader",
    "description": "FFI libraries loader with simple preprocessor",
    "license": "MIT",
    "keywords": [
        "ffi",
        "parser",
        "compiler",
        "loader"
    ],
    "require": {
        "php": ">=7.4",
        "ext-ffi": "*",
        "serafim/flux": "^1.0",
        "serafim/ffi-preprocessor": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Serafim\\FFILoader\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~9.1",
        "symfony/var-dumper": "~5.0",
        "vimeo/psalm": "^3.17"
    },
    "autoload-dev": {
        "psr-4": {
            "Serafim\\FFILoader\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
